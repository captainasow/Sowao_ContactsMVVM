<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sowao_ContactsMVVM.Views.ContactsDetailPage">

    <StackLayout>
        <Entry x:Name="nameEntry" Placeholder="Name" />
        <Entry x:Name="emailEntry" Placeholder="Email" />
        <Entry x:Name="phoneEntry" Placeholder="Phone Number" />
        <Editor x:Name="descriptionEditor" Placeholder="Description" />
        <Button Text="Edit" Clicked="OnEditClicked" />
        <Button Text="Save" Clicked="OnSaveClicked" />
        <Button Text="Back" Clicked="OnBackClicked" />
    </StackLayout>
</ContentPage>
