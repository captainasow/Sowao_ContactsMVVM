<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Sowao_ContactsMVVM.ViewModels"
             x:Class="Sowao_ContactListMVVM.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Entry x:Name="nameEntry" Placeholder="Name" />
            <Entry x:Name="emailEntry" Placeholder="Email" Keyboard="Email" />
            <Entry x:Name="phoneEntry" Placeholder="Phone Number" Keyboard="Telephone" />
            <Editor x:Name="descriptionEditor" Placeholder="Description" HeightRequest="100" />
            <Button Text="Save Contact" Clicked="OnSaveClicked" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>